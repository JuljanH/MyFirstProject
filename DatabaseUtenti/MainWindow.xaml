<Window x:Class="DatabaseUtenti.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DatabaseUtenti"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Name="DataUsers" ItemsSource="{Binding Items}" AutoGenerateColumns="False" Margin="60,135,250,12" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="First Name"  Binding="{Binding }"/>
                <DataGridTextColumn Header="Last Name" Binding="{Binding }" />
                <DataGridTextColumn Header="Email" Binding="{Binding }" />
                <DataGridTextColumn Header="Ip_Address" Binding="{Binding }" />
                <DataGridTextColumn Header="Gender" Binding="{Binding }" />
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="filter_btn" Content="Applica Filtro" Command="{Binding PassaStringaCommand}" Margin="615,82,73,311" Click="filter_btn_Click"/>
        <TextBlock x:Name="input_txt" HorizontalAlignment="Left" Margin="74,85,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="35" Width="246"/>
    </Grid>
</Window>
